SRC = school.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = school
CC = gcc
RM = rm -rf
TEMP = $(wildcard *.swap *.emacs.bak)

all: comp

comp: $(OBJ) $(SRC)
	$(CC) $(SRC) -o $(NAME)

.PHONY: clean oclean fclean re
clean:
	$(RM) $(TEMP) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(TEMP) $(NAME) $(OBJ)

re: 
	touch $(NAME).txt
