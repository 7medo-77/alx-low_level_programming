SRC = school.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = school
CC = gcc
RM = rm -rf
TEMP = $(wildcard *.swap *.emacs.bak)

all: comp

comp: $(OBJ) $(SRC)
	$(CC) $(SRC) -o $(NAME)

.PHONY: clean
clean:
	$(RM) $(TEMP) $(NAME)

.PHONY: oclean
oclean:
	$(RM) $(OBJ)

.PHONY: fclean
fclean:
	$(RM) $(TEMP) $(NAME) $(OBJ)

.PHONY: re
re: 
	touch $(NAME).txt
